<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory
        app:key="cat_settings"
        app:title="@string/Settings">
        <ListPreference
            app:key="theme"
            app:title="@string/Theme"
            app:dialogTitle="@string/msg_theme_title"
            app:entries="@array/theme_options"
            app:entryValues="@array/theme_options_codes"/>
        <ListPreference
            app:key="lang"
            app:title="@string/Language"
            app:dialogTitle="@string/select_language"
            app:entries="@array/languages"
            app:entryValues="@array/languages_codes"/>
    </PreferenceCategory>
</PreferenceScreen>